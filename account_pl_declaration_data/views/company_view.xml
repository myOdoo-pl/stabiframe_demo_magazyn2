<?xml version="1.0"?>
<openerp>
<data>

  <record model="ir.ui.view" id="view_company_inherit_form_pl">
      <field name="name">res.company.form.inherit.pl</field>
      <field name="inherit_id" ref="base.view_company_form"/>
      <field name="model">res.company</field>
      <field name="arch" type="xml">
      <xpath expr="//notebook">
          <page string="Declarations">
            <separator string="Dane do deklaracji"/>
            <group col="4">
              <field name="tax_office"/>
              <field name="regon_code"/>
              <field name="county"/>
              <field name="community"/>
              <field name="post_office"/>
              <field name="street_declaration"/>
              <field name="house_number"/>
              <field name="apartament_number"/>
            </group>
	    <separator string="Osoba Fizyczna"/>
              <group>
                <field name="natural_person"/>
                <field name="first_name"/>
                <field name="surname"/>
                <field name="birth_date"/>
            </group>
          </page>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="view_tax_office_form">
        <field name="name">poland.tax.office.form</field>
        <field name="model">poland.tax.office</field>
        <field name="arch" type="xml">
            <form string="Urzad Skarbowy" version="7.0">
                <group>
                    <field name="name"/>
                    <field name="street"/>
                    <field name="post_code"/>
                    <field name="city"/>
                    <field name="us_code"/>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tax_office_tree">
        <field name="name">poland.tax.office.tree</field>
        <field name="model">poland.tax.office</field>
        <field name="arch" type="xml">
            <tree string="Urzad Skarbowy">
                <field name="name"/>
                <field name="street"/>
                <field name="post_code"/>
                <field name="city"/>
                <field name="us_code"/>
            </tree>
        </field>
    </record>

    <record id="action_tax_office" model="ir.actions.act_window">
            <field name="name">Urzad Skarbowy</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">poland.tax.office</field>
            <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_tax_office" name="UrzÄ™dy Skarbowe" parent="account.menu_finance_configuration" sequence="12" action="action_tax_office"/>
  </data>
</openerp>
