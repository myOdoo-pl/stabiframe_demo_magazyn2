<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="bank_statement_add_currency_form" model="ir.ui.view">
      <field name="name">account.bank.statement.form</field>
      <field name="model">account.bank.statement</field>
      <field name="inherit_id" ref="account.view_bank_statement_form"/>
      <field name="arch" type="xml">
        <field name="date" position="after">
          <field name="custom_currency_rate"/>
          <field name="inverse_rate"/>
        </field>
        <xpath expr="//field[@name='line_ids']//field[@name='currency_id']" position="after">
          <field name="custom_currency_rate_line"/>
          <field name="inverse_rate"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
