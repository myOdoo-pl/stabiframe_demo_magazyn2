<?xml version="1.0" ?>
<odoo>

        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value
                        eval="[('module', '=', 'account'), ('name', '=', 'email_template_edi_invoice')]"
                />
            </function>
            <value eval="{'noupdate': False}"/>
        </function>

        <!-- Replace email from address with current user -->
        <record id="account.email_template_edi_invoice" model="mail.template">
            <field name="email_from">${user.email_formatted |safe}</field>
        </record>

        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value
                        eval="[('module', '=', 'account'), ('name', '=', 'email_template_edi_invoice')]"
                />
            </function>
            <value eval="{'noupdate': True}"/>
        </function>

        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value
                        eval="[('module', '=', 'sale'), ('name', '=', 'email_template_edi_sale')]"
                />
            </function>
            <value eval="{'noupdate': False}"/>
        </function>

        <!-- Replace SO email from address with current user -->
        <record id="sale.email_template_edi_sale" model="mail.template">
            <field name="email_from">${user.email_formatted | safe}</field>
        </record>

        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value
                        eval="[('module', '=', 'sale'), ('name', '=', 'email_template_edi_sale')]"
                />
            </function>
            <value eval="{'noupdate': True}"/>
        </function>

        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value
                        eval="[('module', '=', 'sale'), ('name', '=', 'mail_template_sale_confirmation')]"
                />
            </function>
            <value eval="{'noupdate': False}"/>
        </function>

        <!-- Replace SO confirmation email from address with current user -->
        <record id="sale.mail_template_sale_confirmation" model="mail.template">
            <field name="email_from">${user.email_formatted | safe}</field>
        </record>

        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value
                        eval="[('module', '=', 'sale'), ('name', '=', 'mail_template_sale_confirmation')]"
                />
            </function>
            <value eval="{'noupdate': True}"/>
        </function>

</odoo>