<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Replace email footer with current user signature -->
        <template id="mail_notification_paynow_stabiframe" inherit_id="mail.mail_notification_paynow"
            name="Stabiframe mail notification template">
            <xpath expr="//tr[2]/td/t[2]/div[3]" position="replace">
                <div t-if="record.env.user.sudo().signature" style="font-size: 13px;">
                    <div t-raw="record.env.user.sudo().signature"/>
                </div>
            </xpath>
        </template>

    </data>
</odoo>