<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_wizard_vat_3_records" model="ir.ui.view">
      <field name="name">Wydruk JPK(3) ewidencji VAT</field>
      <field name="model">wizard.jpk.vat.3</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
      <form>
        <group>
          <group>
            <field name="company_id" readonly="0" required="1"/>
            <field name="period"/>
            <field name="vat_file" filename="vat_filename"/>
            <field name="vat_filename" invisible="1"/>
            <field name="pdf_file" filename="vat_filename"/>
            <field name="pdf_filename" invisible="1"/>
            <field name="correction_number"/>
          </group>
          <group>
            <field name="date_from" required="1"/>
            <field name="date_to" required="1"/>
            <field name="cash_basis_pl"/>
          </group>
        </group>
        <footer>
           <button special="cancel"  string="Cancel" />
           <button name="check_report" string="Wygeneruj XML" colspan="1" type="object" class="oe_highlight"/>
           <button name="print_pdf_report" string="Wygeneruj PDF" colspan="1" type="object" class="oe_highlight"/>
        </footer>
      </form>
      </field>
    </record>

    <record id="action_vat_3_report" model="ir.actions.act_window">
      <field name="name">JPK-VAT (3)</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">wizard.jpk.vat.3</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="help">Wydruk raportu ewidencji zakupu i sprzeda≈ºy VAT.</field>
    </record>

    <menuitem
            action="action_vat_3_report"
            id="menu_wizard_vat_3_records"
            parent="account_pl_cirrus.menu_finance_legal_reports"
            sequence="30"/>
  </data>
</odoo>
