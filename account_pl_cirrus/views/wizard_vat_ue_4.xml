<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="account_report_vat_ue_4" model="ir.ui.view">
      <field name="name">Drukuj VAT-UE</field>
      <field name="model">account.report.vat.ue4</field>
      <field name="arch" type="xml">
        <form string="Report Options">
          <group>
            <group>
              <field name="company_id" readonly="1"/>
              <field name="vatue_file" filename="vatue_filename"/>
              <field name="vatue_filename" invisible="1"/>
              <field name="person_type" invisible="1"/>
            </group>
            <group>
              <field name="date_from" required="1"/>
              <field name="date_to" required="1"/>
            </group>
          </group>
          <footer>
            <button name="check_report" string="Generate XML" type="object" context="{'xml_version': True}" icon="fa-file-text-o"/>
            <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight" context="{'xml_version': False}"/>
            or
            <button string="Cancel" class="oe_link" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="action_account_vat_ue_4" model="ir.actions.act_window">
      <field name="name">VAT-UE</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">account.report.vat.ue4</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="account_report_vat_ue_4"/>
      <field name="target">new</field>
    </record>

    <menuitem id="menu_vat_ue_4" name="VAT-UE (4)" parent="menu_finance_legal_reports" action="action_account_vat_ue_4" sequence="30"/>
  </data>
</odoo>
