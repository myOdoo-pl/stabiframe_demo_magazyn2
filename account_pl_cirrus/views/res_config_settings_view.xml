<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Inherit Form view -->
    <record id="res_config_settings_view_form_cash_basis" model="ir.ui.view">
      <field name="name">res.config.settings.form</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="account.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@data-key='account']/div[hasclass('o_settings_container')][2]" position="inside">
          <div class="col-12 col-md-6 o_setting_box" title="Select this if you are using chash basis method speciffic for polish accounting." groups="account.group_account_user">
              <div class="o_setting_left_pane">
                  <field name="cash_basis_pl"/>
              </div>
              <div class="o_setting_right_pane">
                  <label for="cash_basis_pl"/>
                  <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                  <div class="text-muted">
                      Generate polish tax reports using cash basis method
                  </div>
              </div>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
