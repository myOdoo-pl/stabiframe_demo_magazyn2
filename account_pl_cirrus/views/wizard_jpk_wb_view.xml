<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_wizard_jpk_wb_records" model="ir.ui.view">
      <field name="name">Wygeneruj JPK-WB</field>
      <field name="model">wizard.jpk.wb</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <group>
              <field name="journal_id"/>
              <field name="period"/>
              <field name="jpk_wb_file" filename="jpk_wb_filename"/>
              <field name="jpk_wb_filename" invisible="1"/>
            </group>
            <group>
              <field name="date_from" required="1"/>
              <field name="date_to" required="1"/>
            </group>
          </group>
          <footer>
             <button name="check_report" string="Wygeneruj" colspan="1" type="object" class="oe_highlight"/>
             <button special="cancel"  string="Cancel" />
          </footer>
        </form>
      </field>
    </record>

    <record id="action_jpk_wb_report" model="ir.actions.act_window">
        <field name="name">JPK-WB</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.jpk.wb</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="help">Wygeneruj Jednolity Plik Kontrolny dla WyciÄ…gu Bankowego.</field>
    </record>

    <menuitem id="menu_wizard_jpk_wb_records" parent="menu_finance_legal_reports" action="action_jpk_wb_report"/>


  </data>
</odoo>
