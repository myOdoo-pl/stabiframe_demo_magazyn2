<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_report_trial_balance" model="ir.ui.view">
        <field name="name">Drukuj zestawienie obrot√≥w i sald</field>
        <field name="model">account.report.trial_balance</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group>
                    <field name="company_id" invisible="1"/>
                    <group string='Configuration'>
                        <field name="date_from" required="1"/>
                        <field name="date_to" required="1"/>
                        <field name='display_account' required="1" widget="radio"/>
                        <field name='trial_balance_file' filename="trial_balance_filename"/>
                        <field name="trial_balance_filename" invisible="1"/>
                        <field name='report_file_csv_name' invisible='1'/>
                        <field name='report_file_csv' filename='report_file_csv_name'/>
                        <field name='report_file_xlsx_name' invisible='1'/>
                        <field name='report_file_xlsx' filename='report_file_xlsx_name'/>
                    </group>
                    <group string="Opening Balance">
                        <field name='ob_sum_all'/>
                        <field name='ob_journal_id' attrs="{'invisible': [('ob_sum_all', '=', True)], 'required': [('ob_sum_all', '=', False)]}"/>
                        <field name='ob_in_sales'/>
                    </group>
                </group>
                <field name="journal_ids" invisible="1"/>
                <footer>
                    <button name="check_report" string="Generate XML (JPK KR)" type="object" context="{'xml':True}"/>
                    <button name="check_report" string="Generate CSV File" type="object" context="{'csv':True}"/>
                    <button name="check_report" string="Generate Excel File" type="object" context="{'xlsx':True}"/>
                    <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_trial_balance" model="ir.actions.act_window">
        <field name="name">Trial Balance</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.report.trial_balance</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_report_trial_balance"/>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_trial_balance" name="Drukuj ZOiS (JPK KR)" parent="menu_finance_legal_reports" action="action_account_trial_balance"/>
</odoo>
