<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="account_report_vat_7_19" model="ir.ui.view">
      <field name="name">Drukuj VAT-7</field>
      <field name="model">account.report.vat.7.19</field>
      <!--<field name="inherit_id" ref="account.account_common_report_view"/>-->
      <field name="arch" type="xml">
          <form string="Report Options">
            <group>
              <group>
                  <field name="company_id" readonly="0"/>
                  <field name="period" />
                  <field name="vat7_file" filename="vat7_filename" attrs="{'invisible': [('vat7_file','=',False)]}"/>
                  <field name="vat7k_file" filename="vat7k_filename" attrs="{'invisible': [('vat7k_file','=',False)]}"/>
                  <field name="person_type" invisible="1" />
                  <field name="vat7_filename" invisible="1"/>
                  <field name="vat7k_filename" invisible="1"/>
              </group>
              <group>
                  <field name="date_from" required="1"/>
                  <field name="date_to" required="1"/>
                  <field name="cash_basis_pl"/>
              </group>
            </group>
              <footer>
                  <button name="check_report" string="Generate XML for VAT-7K" type="object" context="{'vat-7k': True, 'vat-7': False, 'xml_version': True}" icon="fa-file-text-o" attrs="{'invisible': [['period','=', '1']]}"/>
                  <button name="check_report" string="Print VAT-7K" type="object" default_focus="1" context="{'vat-7k': True, 'vat-7': False, 'xml_version': False}" class="oe_highlight" attrs="{'invisible': [['period','=','1']]}"/>
                  <button name="check_report" string="Generate XML for VAT-7" type="object" context="{'vat-7': True, 'vat-7k': False, 'xml_version': True}" icon="fa-file-text-o" attrs="{'invisible': [['period','in', ['3/1', '3/2','3/3','3/4']]]}"/>
                  <button name="check_report" string="Print VAT-7" type="object" default_focus="1" context="{'vat-7': True, 'vat-7k': False, 'xml_version': False}" class="oe_highlight" attrs="{'invisible': [['period','in', ['3/1', '3/2','3/3','3/4']]]}"/>
                  or
                  <button string="Cancel" class="oe_link" special="cancel" />
              </footer>
          </form>
      </field>
  </record>

  <record id="action_account_vat_7_19" model="ir.actions.act_window">
      <field name="name">VAT-7 19 (VAT-7K 13)</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">account.report.vat.7.19</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="account_report_vat_7_19"/>
      <field name="target">new</field>
  </record>

  <menuitem
      id="menu_vat_7_19"
      name="VAT-7 (19)"
      parent="menu_finance_legal_reports"
      action="action_account_vat_7_19"
      sequence="10"/>

</odoo>
